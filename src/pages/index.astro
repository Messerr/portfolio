---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">David Messer</div>
    <div class="text-3xl py-3 font-bold">Senior Web Developer</div>
    <div class="py-2">
      <text class="text-lg">
        I have been a professional web developer for over 7 years delivering highly
    customizable, user friendly, responsive and accessible websites.
      </text>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Projects I've Worked On:</div>
  </div>

  <HorizontalCard
    title="Lightning Step"
    img="/ls.png"
    desc="HTML, CSS, JS, Hubspot CMS"
    url="https://lightningstep.com"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="SC&T Make Every Molecule Matter"
    img="/memm.png"
    desc="HTML, CSS, JS, Hubspot CMS"
    url="https://catalysts.shell.com/en/memm"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ContractSafe"
    img="/cs.png"
    desc="HTML, CSS, JS, Hubspot CMS"
    url="https://contractsafe.com"
  />


</BaseLayout>
